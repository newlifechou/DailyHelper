<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="DialyHelper.Login"
	x:Name="Window"
	Title="Login"
	Width="356" Height="306" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid x:Name="LayoutRoot" Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Daily Helper" HorizontalAlignment="Center" FontSize="40" FontFamily="/DialyHelper;component/Fonts/#Tekton Pro" Margin="0,10" Foreground="Blue"></TextBlock>
        <TextBlock Grid.Row="1" Text="Enter your unlock code below:" Margin="5"/>
        <PasswordBox Name="txtpassword" Grid.Row="2" Margin="5" FontSize="24" HorizontalContentAlignment="Center"/>
        <Button Name="btnunlock" Grid.Row="3" Content="Unlock" Margin="5,-1,5,5" Padding="5,10"/>
    </Grid>
</Window>